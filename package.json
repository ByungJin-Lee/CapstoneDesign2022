{
  "license": "MIT",
  "scripts": {
    "server": "nodemon --watch \"server/src/**/*.ts\" --exec \"ts-node\" server/src/server.ts",
    "build:server": "tsc && tsc-alias",
    "client": "cd client && yarn start",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\" "
  },
  "dependencies": {
    "concurrently": "^7.3.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "mongoose": "^6.5.4",
    "mongoose-plugin-autoinc-fix": "^1.2.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "tsc-alias": "^1.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/node": "^18.7.14",
    "@types/passport": "^1.0.10",
    "@types/passport-local": "^1.0.34",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "_moduleAliases": {
    "@": "./server/src"
  }
}
